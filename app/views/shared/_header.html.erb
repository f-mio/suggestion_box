<div class="header">
  <div class="left-header">
    <%= link_to "Suggestions Box", root_path, class:"header-title"%>
    <% if user_signed_in? %>
      <div class="user-info-field">
        <div>
          ようこそ、<%= (current_user.family_name + " " + current_user.first_name) %>さん
        </div>
        <div class="more">
          <span class="menu">メニュー</span>
          <ul class="more_list">
            <% if UserDepartmentsRelation.where(
                    "is_manager = true AND user_id = :user_id AND department_id IN (:department) ",
                    {user_id: current_user.id, department: (Department.pluck(:parent_id).uniq)}).length > 0 ||
                  current_user.id == 1 %>
              <li><%= link_to '評価ページ', evaluations_path, method: :get %></li>
              <li><%= link_to '最終評価ページ', results_path, method: :get %></li>
            <% elsif UserDepartmentsRelation.where(
                    "is_manager = true AND user_id = :user_id",
                    {user_id: current_user.id}).length > 0 || current_user.id ==1 %>
              <li><%= link_to '評価ページ', evaluations_path, method: :get %></li>
            <%end%>
            <% if current_user.id == 1 %>
              <li><%= link_to '部署情報編集ページ', user_departments_relations_path, method: :get %></li>
            <%end%>
            <li><%= link_to 'ユーザ登録編集', edit_user_registration_path, method: :get %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
    <%else%>
      <div class="sign-in-out-btn">
        <%= link_to "ログイン", new_user_session_path %>
      </div>
    <% end %>
  </div>
  <div class="right-header">
    <div class="header-search-area">
      <div class="header-search">
        <div class="search-form"></div>
        <div class="search-btn"></div>
        <%# 本番は下記の検索フォームを入れ込む %>
        <%#= form_with "#", root_path , placeholder: "ワード検索" , class:"header-search", local: true do |f| %>
          <%#= f.text_field :keyword, class:search-form %>
          <%#= f.submit class:"search-btn" %>
        <%# end %>
      </div>
      <div class="header-items">
        <p class="header-item">時期</p>
        <p class="header-item">カテゴリー</p>
        <p class="header-item">部署</p>
        <p class="header-item">評価</p>
      </div>
    </div>
  </div>
</div>