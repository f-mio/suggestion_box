
<%= render "/devise/shared/header" %>

<h1 class="registration-title">Login Page</h1>

<div class="user-registration">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="registration-field">
      社員番号 <br />
      <%= f.text_field :corporate_no, clsaa:"registration-text-box", autofocus: true, autocomplete: "corporate_no" %>
    </div>

    <div class="registration-field">
      パスワード <br />
      <%= f.password_field :password, clsaa:"registration-text-box", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="registration-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="submit">
      <%= f.submit "Login", class:"submit-btn" %>
    </div>
  <% end %>
  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>

